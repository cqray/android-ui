<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CommonToolbar">
        <attr name="tbPaddingLeft" format="dimension" />
        <attr name="tbPaddingRight" format="dimension" />
        <!-- 水波纹效果 -->
        <attr name="tbRippleEnable" format="boolean" />
        <!-- 标题 -->
        <attr name="tbTitle" format="string" />
        <attr name="tbTitleTextColor" format="color" />
        <attr name="tbTitleTextSize" format="dimension" />
        <attr name="tbTitleTextBold" format="boolean" />
        <attr name="tbTitleGravity" format="enum">
            <enum name="start" value="8388627" />
            <enum name="center" value="17" />
        </attr>
        <attr name="tbTitleSpace" format="dimension" />
        <!-- 返回 -->
        <attr name="tbBackIcon" format="reference" />
        <attr name="tbBackIconVisible" format="boolean" />
        <attr name="tbBackText" format="string" />
        <attr name="tbBackTextColor" format="color" />
        <attr name="tbBackTextSize" format="dimension" />
        <attr name="tbBackTextBold" format="boolean" />
        <attr name="tbBackTextVisible" format="boolean" />
        <attr name="tbBackSpace" format="dimension" />
        <!-- 行为文字 -->
        <attr name="tbActionTextColor" format="color" />
        <attr name="tbActionTextSize" format="dimension" />
        <attr name="tbActionTextBold" format="boolean" />
        <attr name="tbActionIconWidth" format="dimension" />
        <attr name="tbActionSpace" format="dimension" />
        <attr name="tbDividerColor" format="color" />
        <attr name="tbDividerHeight" format="dimension" />
        <attr name="tbDividerMargin" format="dimension" />
        <attr name="tbDividerVisible" format="boolean" />
    </declare-styleable>
</resources>
