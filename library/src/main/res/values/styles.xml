<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 默认主题，去掉Activity动画不对，不知为何 -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- 主题相关配置， 防止Activity动画不生效。去掉Activity动画不对，不知为何 -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <!-- 主题相关配置， 防止Activity动画不生效。去掉Activity动画不对，不知为何 -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!-- 主题，纵向动画 -->
    <style name="AndroidTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/DefaultVerticalAnim</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowDisablePreview">true</item>
    </style>
    <!-- 主题，纵向动画 -->
    <style name="AndroidTheme.H" parent="AndroidTheme">
        <item name="android:windowAnimationStyle">@style/DefaultHorizontalAnim</item>
    </style>
    <!-- 主题相关配置， 防止Activity动画不生效 -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- 默认横向动画 -->
    <!-- 从名为A的activity跳转到B，B也可以跳转到C，其中转场动画设置在B上。 -->
    <style name="DefaultHorizontalAnim">
        <!-- A跳转B时，B的动画 -->
        <item name="android:activityOpenEnterAnimation">@anim/_core_horizontal_from_right</item>
        <!-- A跳转B时，A的动画 -->
        <item name="android:activityOpenExitAnimation">@anim/_core_horizontal_to_left</item>
        <!-- A跳转到B后，后退到A时，A的进入动画 -->
        <item name="android:activityCloseEnterAnimation">@anim/_core_horizontal_from_left</item>
        <!-- A跳转到B后，后退到A时，B的退出动画 -->
        <item name="android:activityCloseExitAnimation">@anim/_core_horizontal_to_right</item>
    </style>

    <!-- 默认纵向动画 -->
    <!-- 从名为A的activity跳转到B，B也可以跳转到C，其中转场动画设置在B上。 -->
    <style name="DefaultVerticalAnim">
        <!-- A跳转B时，B的动画 -->
        <item name="android:activityOpenEnterAnimation">@anim/_core_vertical_to_top</item>
        <!-- A跳转B时，A的动画 -->
        <item name="android:activityOpenExitAnimation">@anim/_core_no_anim</item>
        <!-- A跳转到B后，后退到A时，A的进入动画 -->
        <item name="android:activityCloseEnterAnimation">@anim/_core_no_anim</item>
        <!-- A跳转到B后，后退到A时，B的退出动画 -->
        <item name="android:activityCloseExitAnimation">@anim/_core_vertical_from_top</item>
    </style>

</resources>
