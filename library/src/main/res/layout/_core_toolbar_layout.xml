<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:ignore="RelativeOverlap, UseCompoundDrawables">

    <LinearLayout
        android:id="@+id/_core_toolbar_nav_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/content"
        android:paddingEnd="@dimen/content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:contentDescription="@string/app_name"
            android:focusable="true"
            android:scaleType="centerInside"
            android:src="@drawable/def_back_common_light"
            android:visibility="visible" />

        <Space
            android:layout_width="@dimen/small"
            android:layout_height="match_parent"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:textColor="@color/foreground"
            android:textSize="@dimen/h3"
            android:visibility="gone" />

    </LinearLayout>

    <TextView
        android:id="@+id/_core_toolbar_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_toEndOf="@id/_core_toolbar_nav_layout"
        android:layout_toRightOf="@id/_core_toolbar_nav_layout"
        android:layout_toStartOf="@id/_core_toolbar_action_layout"
        android:layout_toLeftOf="@id/_core_toolbar_action_layout"
        android:ellipsize="end"
        android:maxLines="1"
        android:gravity="center_vertical"
        android:textColor="@color/foreground"
        android:textSize="@dimen/h1" />

    <LinearLayout
        android:id="@+id/_core_toolbar_action_layout"
        android:paddingStart="0dp"
        android:paddingEnd="@dimen/content"
        android:paddingLeft="0dp"
        android:paddingRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" />

    <View
        android:id="@+id/_core_toolbar_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider"
        android:layout_alignParentBottom="true"
        android:background="@color/divider" />
</merge>
