<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="center"
    android:orientation="vertical"
    tools:ignore="ContentDescription, HardcodedText">

    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_no_data_search" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暂无数据"
        android:textColor="@color/hint"
        android:textSize="@dimen/caption" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/content"
        android:paddingRight="@dimen/content"
        android:paddingTop="@dimen/smaller"
        android:paddingBottom="@dimen/smaller"
        android:text="点击重试"
        android:focusable="true"
        android:clickable="true"
        android:layout_marginTop="@dimen/small"
        android:background="@drawable/_core_btn_retry"
        android:textSize="@dimen/caption"
        android:textColor="@color/hint"/>

</LinearLayout>